<%= render "partials/errors", resource: resource %>
<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t('.header') %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <p>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
            </p>

            <p>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </p>

            <p>
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Enter Email' %>
            </p>

            <p>
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', minlength: '6' %>
            </p>

            <p>
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </p>

            <%= f.submit t('sign_up'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

    <%= render "devise/shared/links" %>
  </div>
</div>


