<h1><%= @question.test.title %> <%= Question.model_name.human %></h1>
<p>
  <strong><%= Question.human_attribute_name(:body) %>:</strong>
  <%= @question.body %>
</p>
<h2><%= Answer.model_name.human(count: @question.answers.count) %></h2>
<%= link_to t('.new-answer'), new_admin_question_answer_path(@question) %>
<ol>
  <%= render @question.answers %>
</ol>
<%= link_to t('edit'), edit_admin_question_path(@question) %> |
<%= link_to t('back'), admin_test_path(@question.test) %>
