<h1><% t('.header') %></h1>
<p>
  <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary' %>
</p>
<table class="table table-striped">
  <tr>
    <th role="button" class="sort-by-title">
      <%= Test.human_attribute_name(:title) %>
      <%= octicon 'arrow-up', class: 'text-success d-none', fill: 'currentColor' %>
      <%= octicon 'arrow-down', class: 'text-success d-none', fill: 'currentColor' %>
    </th>
    <th><%= Test.human_attribute_name(:level) %></th>
    <th><%= Question.model_name.human(count: 2) %></th>
    <th colspan="3"><%= t('actions') %></th>
  </tr>
  <%= render @tests %>
</table>
