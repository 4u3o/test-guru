<%= form_with model: [:admin, @test] do |form| %>
  <%= render 'partials/errors', resource: @test %>
  <div class="form-group">
    <p>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </p>
    <p>
      <%= form.label :level %>
      <%= form.number_field :level, class: 'form-control' %>
    </p>
    <p>
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :title, {prompt: true}, class: 'form-select' %>
    </p>
    <p>
      <%= form.label :timer %>
      <%= form.text_field :timer,
                          pattern: '^(?:2[0-3]|[01][0-9]):[0-5][0-9]',
                          placeholder: "HH:MM",
                          class: 'form-control'
      %>
    </p>
    <p class='form-check'>
      <%= form.label :published, class: 'form-check-label' %>
      <%= form.check_box :published, class: 'form-check-input' %>
    </p>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>