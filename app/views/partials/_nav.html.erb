<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to t('test-guru'), root_path, class: 'navbar-brand' %>
      <% if current_user&.admin? %>
        <%= render 'admin/application/panel_link' %>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
          <% if user_signed_in? %>
            <li class="navbar-text">
              <%= t('.welcome_html', email: current_user.email) %>
            </li>
            <li class="nav-item">
              <%= link_to Badge.model_name.human(count: 2), badges_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('logout'), destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to t('sign_up'), new_user_registration_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to t('log_in'), new_user_session_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

